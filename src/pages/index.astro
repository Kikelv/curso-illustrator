---
import Layout from '../layouts/Layout.astro';
import Galeria from './galeria.astro';
import Card from '../components/Card.astro';
---

<Layout title="Portfolio cursos de ilustrción">
	<Galeria>
			<Card
				href="/img/ninja.svg"
				title="Ninja"
				body="Primer dibujito con el illustrator"
			/>
			<Card
				href="/img/cacho-carne.svg"
				title="Cacho de carne"
				body="Dibujo siguiendo un tutorial de YouTube."
			/>
			<Card
				href="/img/homer.svg"
				title="Homer Simpson"
				body="La cara de Homer copiada de una imagen de internet."
			/>
			<Card
				href="/img/ejemplo.avif"
				title="Relleno"
				body="Imagen de relleno que sustituiré a medida que vaya haciendo más ilustraciones."
			/>
	</Galeria>
</Layout>

